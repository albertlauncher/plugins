* {
    border: none;
    color : palette(window-text);
    background-color: palette(window);
}

#frame {
    border-radius: 10px;
    background-color: palette(window);
    min-width:640px;
    max-width:640px;
}

#inputLine {
    padding: 8px;
    font-size: 24px;
    selection-color: palette(highlighted-text);
    selection-background-color: palette(highlight);
    background-color: transparent;
}

#settingsButton {
    margin: 8px;
    color: palette(highlight);
    background-color: transparent;
    padding: 0px;
    min-width:14px;
    min-height:14px;
    max-width:14px;
    max-height:14px;
}

/********** ListViews ************/

QListView {
    margin-bottom: 8px;
    background: transparent;
    selection-color: palette(highlighted-text);
}

QListView::item:selected {
    background: palette(highlight);
}

QListView QScrollBar:vertical {
    width: 3px;
    background: transparent;
}

QListView QScrollBar::handle:vertical  {
    background: palette(highlight);
    border-radius: 1px;
    min-height: 24px;
}

QListView QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QListView QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical,
QListView QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    border: 0px;
    width: 0px;
    height: 0px;
    background: transparent;
}

/********** resultsList **********/

QListView#resultsList {
    icon-size: 36px;
    font-size: 18px;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}

QListView#resultsList::item {
    padding: 8px 0px 0px 0px;
    height: 48px;
}

/********** actionList **********/

QListView#actionList {
    font-size: 14px;
}

QListView#actionList::item {
    padding: 4px;
}
